<body class="bg-cstm-green">
  {% include "components/navbar.html.jinja" %}
  <div class="row w-100 mx-auto mb-1 text-center">
    <div class="d-flex justify-content-center">
      <div class="col-md-3 my-2">
        <select class="form-control" id="yearDropdown">
          {% for years in year %}
          <option value="{{years}}">{{years}}</option>
          {% endfor %}

        </select>
      </div>
      <div class="col-md-3 mx-2 my-2">

        <select class="form-control" id="monthDropdown">
          <option value="0">January</option>
          <option value="1">February</option>
          <option value="2">March</option>
          <option value="3">April</option>
          <option value="4">May</option>
          <option value="5">June</option>
          <option value="6">July</option>
          <option value="7">August</option>
          <option value="8">September</option>
          <option value="9">October</option>
          <option value="10">November</option>
          <option value="11">December</option>
        </select>
      </div>
    </div>
    <div class="col-md-12 mx-auto mt-1">
      <div class="owl-carousel" id="calendar-container"></div>
    </div>

  </div>
  <div class="container col-3 mx-auto mt-2">
    {{assignmentreceive}}

    <p id="p1" class=" text-center">You have no Assignments</p>
    {# <p id="p2" class=" text-center">0</p> #}
  </div>
  {# </div> #}

  {# Here is the code for the functioning checkbox system #}

  {# <form action="/assignment['id']/upd" method="post"> #}
    <form action="/tester" method="post">
      {# next 2 lines are for testing only thing nescessary are type checkbox and value checked #}
      <input type="checkbox" id="vehicle1" name="vehicle1" value="checked">
      <label for="vehicle1"> I have a bike</label><br>
      <input type="submit" value="Submit">
    </form>
    {# Code ends here #}




    <div class="d-flex justify-content-end align-self-end fixed-bottom me-3">
      <button id="openPopup" class="btn btn-cstm-red rounded-pill mb-4" style="width: fit-content;">Add
        Assignments</button>
    </div>
    <div id="popup" class="popup">

      {# style="overflow: hidden; margin:0px; height:100%;" #}

      <div class="popup-content">
        <h2>Create A New Assignment</h2>


        <form id="myForm" action="/formSub" method="post">

          <label for="name">Name of the Assignment:</label><br>
          <input class="mb-2 form-control form-control-sm" type="text" name="name" id="name" required><br>

          <div class="row g-3 d-flex justify-content-center">
            <div class="col-2">
              <label for="se">Year: </label>
            </div>

            <div class="col-3">
              <select class=" form-control form-control-sm" id="se" name="years">
                {% for years in year %}
                <option value="{{years}}">{{years}}</option>
                {% endfor %}
              </select><br>
            </div>
          </div>

          <div class="row g-3 d-flex justify-content-center">
            <div class="col-2">
              <label for="mi">Minute: </label>
            </div>

            <div class="col-3">
              <input class=" form-control form-control-sm" type="number" id="mi" name="minutes" is="decimal-input"
                min="0" max="59" step="1" value="0" required><br>
            </div>
          </div>

          <div class="row g-3 d-flex justify-content-center">
            <div class="col-2">
              <label for="ho">Hour: </label>
            </div>

            <div class="col-3">
              <input class=" form-control form-control-sm" type="number" id="ho" name="hours" is="decimal-input" min="1"
                max="23" step="1" value="1" required><br>
            </div>
          </div>

          <div class="row g-3 d-flex justify-content-center">
            <div class="col-2">
              <label for="da">Day: </label>
            </div>

            <div class="col-3">
              <input class=" form-control form-control-sm" type="number" id="da" name="days" is="decimal-input" min="1"
                max="30" step="1" value="1" required><br>
            </div>
          </div>

          <div class="row g-3 d-flex justify-content-center">
            <div class="col-2">
              <label for="mo">Month: </label>
            </div>

            <div class="col-3">
              <select class="mb-2 form-control form-control-sm" id="mo" name="months">
                <option value="0">January</option>
                <option value="1">February</option>
                <option value="2">March</option>
                <option value="3">April</option>
                <option value="4">May</option>
                <option value="5">June</option>
                <option value="6">July</option>
                <option value="7">August</option>
                <option value="8">September</option>
                <option value="9">October</option>
                <option value="10">November</option>
                <option value="11">December</option>
              </select>
              <br>
            </div>
          </div>

            <div class="mb-3">
              <label for="desc" class="form-label text-center">Description: </label>
              <textarea class="form-control" id="desc" rows="2"></textarea>
            </div>

            <button class="btn btn-success" onclick="Popup()">Create Assignment</button>
        </form>
        <button id="closePopup"
          style="margin-top: 10px; padding: 5px 10px; background-color: #dc3545; color: #fff; border: none; border-radius: 3px;">Close</button>
      </div>
    </div>
    {% include "components/footer.html.jinja" %}
    <script src="/static/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
    <script>
      const openPopup = document.getElementById('openPopup');
      const closePopup = document.getElementById('closePopup');
      const popup = document.getElementById('popup');

      openPopup.addEventListener('click', () => {
        popup.style.display = 'flex';
        console.log('Button clicked');
        document.body.classList.add('overflow-hidden');
        window.scrollTo({
          top: 0,
          behavior: "smooth"
        });

      });

      closePopup.addEventListener('click', () => {
        popup.style.display = 'none';
      });

      window.addEventListener('click', (event) => {
        if (event.target === popup) {
          document.body.classList.remove('overflow-hidden');
          popup.style.display = 'none';
        }
      });
    </script>

</body>

</html>