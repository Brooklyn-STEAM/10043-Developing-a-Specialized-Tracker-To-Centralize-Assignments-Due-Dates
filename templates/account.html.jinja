<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>PlotPoint</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link href="/static/styles.css" rel="stylesheet">
</head>

<body class="bg-cstm-green">
  {% include "components/navbar.html.jinja" %}
  <h2 class="text-center">{{current_user.username}}'s Account Settings</h2>
  {%for acc in account%}
  <form method="post" action="/acc/updusername">
    <div class="d-flex justify-content-evenly text-center">
      <div class="col-7">
        <label class="fs-4" for="floatingPassword">Username</label>
        <input type="text" name="username" class="form-control form-control-lg" id="floatingPassword"
          value="{{acc['username']}}">
      </div>
      <button class="btn btn-primary mt-5" type="submit" style="height: 40px;">
        <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="15" height="15">
          <path
            d="M4.5 14.5v-3a1 1 0 011-1h4a1 1 0 011 1v3m3 0h-12a1 1 0 01-1-1v-12a1 1 0 011-1h8.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V13.5a1 1 0 01-1 1z"
            stroke="currentColor">
          </path>
        </svg>
      </button>
    </div>
  </form>
  <br>
  <form method="post" action="/acc/updpswd">
    <div class="d-flex row justify-content-center">
      {%for message in get_flashed_messages()%}
      <div class="alert alert-danger col-5" role="alert">
        {{message}}
      </div>
      {%endfor%}
    </div>
    <div class="text-center">
      <div class="row">
        <div class="col-7 mx-auto ">
          <label class="fs-4" for="floatingPassword">Password</label>
          <input type="password" name="password" class="form-control form-control-lg" id="floatingPassword"
            placeholder="Enter New Password" min="8">
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-7 mx-auto">
          <input type="password" name="confirm_password" class="form-control form-control-lg" id="floatingPassword"
            placeholder="Confirm New Password" min="8" required>
        </div>
      </div>
      <button class="btn btn-primary mt-5" type="submit" style="height: 40px;">
        <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="15" height="15">
          <path
            d="M4.5 14.5v-3a1 1 0 011-1h4a1 1 0 011 1v3m3 0h-12a1 1 0 01-1-1v-12a1 1 0 011-1h8.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V13.5a1 1 0 01-1 1z"
            stroke="currentColor">
          </path>
        </svg>
      </button>
    </div>
  </form>
  <br>
  <form method="post" action="/acc/updfname">
    <div class="d-flex justify-content-evenly text-center">
      <div class="col-7">
        <label class="fs-4" for="floatingPassword">First Name</label>
        <input type="text" name="first_name" class="form-control form-control-lg" id="floatingPassword"
          value="{{acc['first_name']}}">
      </div>
      <button class="btn btn-primary mt-5" type="submit" style="height: 40px;">
        <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="15" height="15">
          <path
            d="M4.5 14.5v-3a1 1 0 011-1h4a1 1 0 011 1v3m3 0h-12a1 1 0 01-1-1v-12a1 1 0 011-1h8.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V13.5a1 1 0 01-1 1z"
            stroke="currentColor">
          </path>
        </svg>
      </button>
    </div>
  </form>
  <br>
  <form method="post" action="/acc/updlname">
    <div class="d-flex justify-content-evenly text-center">
      <div class="col-7">
        <label class="fs-4" for="floatingPassword">Last Name</label>
        <input type="text" name="last_name" class="form-control form-control-lg" id="floatingPassword"
          value="{{acc['last_name']}}">
      </div>
      <button class="btn btn-primary mt-5" type="submit" style="height: 40px;">
        <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="15" height="15">
          <path
            d="M4.5 14.5v-3a1 1 0 011-1h4a1 1 0 011 1v3m3 0h-12a1 1 0 01-1-1v-12a1 1 0 011-1h8.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V13.5a1 1 0 01-1 1z"
            stroke="currentColor">
          </path>
        </svg>
      </button>
    </div>
  </form>
  <br>
  <form method="post" action="/acc/updemail">
    <div class="d-flex justify-content-evenly text-center">
      <div class="col-7">
        <label class="fs-4" for="floatingPassword">Email Address</label>
        <input type="text" name="email" class="form-control form-control-lg" id="floatingPassword"
          value="{{acc['email']}}">
      </div>
      <button class="btn btn-primary mt-5" type="submit" style="height: 40px;">
        <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="15" height="15">
          <path
            d="M4.5 14.5v-3a1 1 0 011-1h4a1 1 0 011 1v3m3 0h-12a1 1 0 01-1-1v-12a1 1 0 011-1h8.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V13.5a1 1 0 01-1 1z"
            stroke="currentColor">
          </path>
        </svg>
      </button>
    </div>
  </form>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  {%endfor%}
</body>

</html>